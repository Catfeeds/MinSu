<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_all"
    android:descendantFocusability="beforeDescendants"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/c"
        android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/part_line" />

    <com.minsu.minsu.widget.RoundedCornerImageView
        android:id="@+id/chat_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@mipmap/avatar_default" />
    <TextView
        android:id="@+id/tv_message_counts"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="-20dp"
        android:gravity="center"
        android:text="1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/crcle"
        android:textColor="@color/white"
        android:textSize="9sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@+id/chat_img"
        android:background="@color/part_line" />
    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/chat_img"
        android:text="谢娜"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!--<TextView-->
        <!--android:id="@+id/chat_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/chat_name"-->
        <!--android:layout_marginStart="5dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_toEndOf="@+id/chat_img"-->
        <!--android:text="明天一起生猴子"-->
        <!--android:textSize="14sp" />-->

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="11:21 AM"
        android:textSize="14sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_alignParentRight="true"
            android:layout_below="@id/chat_time"
            android:layout_marginRight="10dp"
            android:text="删除"
            android:visibility="gone"
            android:padding="3dp"
            android:textSize="12sp"
            android:background="@drawable/frame_button_2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/green_bac">

        <RelativeLayout
            android:id="@+id/coupon_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center">

            <TextView
                android:id="@+id/coupon_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="￥"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/coupon_tag"
                android:gravity="center"
                android:textStyle="bold"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coupon_price"
                android:text="通用券"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>


      <RelativeLayout
          android:layout_width="wrap_content"
          android:gravity="center_vertical"
          android:layout_toRightOf="@+id/coupon_img"
          android:layout_height="wrap_content">


          <TextView
              android:id="@+id/coupon_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="18dp"
              android:layout_marginStart="10dp"
              android:text="30元全场通用券"
              android:textColor="@color/black"
              android:textSize="16sp" />

          <TextView
              android:id="@+id/coupon_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="10dp"
              android:text="已领取"
              android:textColor="@color/green"
              android:textSize="18sp" />

          <TextView
              android:id="@+id/coupon_threshold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/coupon_name"
              android:layout_marginStart="10dp"
              android:layout_marginTop="5dp"

              android:text="无门槛使用"
              android:textColor="@color/black"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/coupon_term_validity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/coupon_threshold"
              android:layout_marginStart="10dp"
              android:layout_marginTop="5dp"
              android:text="有效期: 2016-6-20至2016-7-20"
              android:textColor="@color/black"
              android:textSize="14sp" />

      </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

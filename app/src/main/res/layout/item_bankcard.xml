<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bank"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:background="@mipmap/bank_back_1">

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="浦发银行"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bank_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="储蓄卡"
        android:textColor="@color/qianhui"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/bank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="3213214214422421421421412"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>

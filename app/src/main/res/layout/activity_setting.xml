<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/qianhui"
    tools:context="com.minsu.minsu.user.setting.SettingActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rl_change_password"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="修改密码"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_right_0"/>

    </RelativeLayout>
    <View
        android:id="@+id/set_tag1"
        android:layout_below="@+id/rl_change_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/part_line"/>


    <RelativeLayout
        android:id="@+id/rl_function_feedback"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_function_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="功能反馈"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_right_0"/>

    </RelativeLayout>
    <View
        android:id="@+id/set_tag2"
        android:layout_below="@+id/rl_function_feedback"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/part_line"/>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_privacy_setting"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_privacy_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="隐私设置"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_right_0"/>

    </RelativeLayout>
    <View
        android:id="@+id/set_tag3"
        android:layout_below="@+id/rl_privacy_setting"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/part_line"/>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="关于"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_right_0"/>

    </RelativeLayout>
    <View
        android:id="@+id/set_tag4"
        android:layout_below="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/part_line"/>
    <TextView
        android:id="@+id/logout"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="退出登录"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:gravity="center"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.minsu.minsu.widget.RoundedCornerImageView
        android:id="@+id/comment_user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/comment_user_img"
        android:text="昵称"
        android:textColor="@color/steelblue" />

    <TextView
        android:id="@+id/comment_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:text="100赞" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_user_img"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-20dp"
        android:layout_toEndOf="@+id/comment_user_img"
        android:text="谢娜要生猴子了大苏打撒旦倒萨倒萨撒旦撒旦撒倒萨倒萨倒萨撒旦撒旦"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/comment_user_img"
        android:text="11:21 AM"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/comment_reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/comment_time"
        android:text="3回复"
        android:padding="3dp"
        android:background="@drawable/frame_button_5"
        android:textSize="14sp" />
</RelativeLayout>
